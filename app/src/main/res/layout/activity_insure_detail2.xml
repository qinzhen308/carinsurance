<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">



            <ImageView
                android:id="@+id/iv_company"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_company"
                android:layout_marginLeft="8dp"
                android:text="平安保险"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_insure_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_company"
                android:layout_marginLeft="8dp"
                android:text="平安保险"
                android:textColor="@color/text_grey_french1"
                android:layout_below="@+id/tv_company_name"
                android:textSize="@dimen/text_size" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View style="@style/divider_horizontal_grey"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:id="@+id/tv_force_tsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="交强险投保单号："
                android:textColor="@color/text_grey"
                android:layout_marginTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/tv_business_tsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="商业险投保单号："
                android:textColor="@color/text_grey"
                android:layout_marginTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_force_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="交强险保单号："
                android:textColor="@color/text_grey"
                android:layout_marginTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/text_size" />



            <TextView
                android:id="@+id/tv_business_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="商业险保单号："
                android:textColor="@color/text_grey"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="@dimen/text_size" />



        </LinearLayout>




        <LinearLayout
            android:id="@+id/layout_business_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">



            <LinearLayout
                android:id="@+id/layout_business_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商业险"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_big" />


                <TextView
                    android:id="@+id/tv_business_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="a123213"
                    android:textColor="@color/main"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <View style="@style/divider_horizontal_grey"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <com.paulz.carinsurance.view.ListViewInScrollView
            android:id="@+id/lv_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@null"
            android:padding="10dp" />




        <LinearLayout
            android:id="@+id/layout_business_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            >

            <View style="@style/divider_horizontal_grey"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/layout_business_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险起期"
                    android:textColor="@color/text_grey_french1"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:id="@+id/tv_business_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="2013-13-2"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/layout_force_and_boat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/layout_force_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交强险"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_big" />


                <TextView
                    android:id="@+id/tv_force_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="a123213"
                    android:textColor="@color/main"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <View style="@style/divider_horizontal_grey"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:id="@+id/layout_force_all1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="交强险"
                    android:textColor="@color/text_grey_french1"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="投保"
                    android:textColor="@color/text_grey_french1"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:id="@+id/tv_force_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="a123213"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_boat_all1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="车船税"
                    android:textColor="@color/text_grey_french1"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="投保"
                    android:textColor="@color/text_grey_french1"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:id="@+id/tv_boat_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="a123213"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


            </RelativeLayout>

            <View style="@style/divider_horizontal_grey"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:id="@+id/layout_force_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险起期"
                    android:textColor="@color/text_grey_french1"
                    android:textSize="@dimen/text_size" />


                <TextView
                    android:id="@+id/tv_force_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="13"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>


        </LinearLayout>







    </LinearLayout>
</ScrollView>







