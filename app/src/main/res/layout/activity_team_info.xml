<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_label_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_line_orange"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="团队信息"
                android:textColor="@color/text_grey_french1"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/btn_fee_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="查看费用比例"
                android:layout_marginRight="10dp"
                android:textColor="@color/base_blue"
                android:textSize="@dimen/text_size"
                android:visibility="gone"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队名称"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="头像"
                android:layout_centerVertical="true"
                android:textColor="@color/text_grey"
                android:drawableRight="@drawable/arr_big"
                android:textSize="@dimen/text_size" />

            <com.paulz.carinsurance.view.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/user2"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="口号"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_slogan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="简介"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />



            <EditText
                android:id="@+id/et_describ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:enabled="false"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_line_orange"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="职业信息"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/label_team_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队负责人"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_team_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/et_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险从业年限"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/btn_years"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:enabled="false"
                android:hint="请选择年限"
                android:drawableRight="@drawable/arr_big"
                android:drawablePadding="10dp"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:singleLine="true"
                android:textSize="@dimen/text_size" />




        </LinearLayout>

        <TextView
            android:id="@+id/btn_order_counts"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_orange"
            android:layout_margin="15dp"
            android:textColor="@color/btn_white_orange"
            android:text="查看团队出单明细"
            android:visibility="gone"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/btn_belong"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_orange"
            android:layout_margin="15dp"
            android:textColor="@color/btn_white_orange"
            android:text="归属"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_orange"
            android:layout_margin="15dp"
            android:textColor="@color/btn_white_orange"
            android:text="提交修改"
            android:gravity="center"
            />


    </LinearLayout>


</ScrollView>