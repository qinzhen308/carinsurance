<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/shape_line_orange"
                android:drawablePadding="5dp"
                android:text="车辆信息"
                android:textColor="@color/text_grey_french1"
                android:textSize="@dimen/text_size" />



            <TextView
                android:id="@+id/btn_ocr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/btn_scanid"
                android:drawablePadding="5dp"
                android:text="拍照自动识别"
                android:gravity="center_vertical"
                android:textColor="@color/text_grey_french1"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆识别代码"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/tv_car_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arr_big"
                android:gravity="center_vertical|right"
                android:hint="请点击输入车辆识别代码"
                android:textColor="@color/text_grey_french2"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/btn_car_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arr_big"
                android:gravity="center_vertical|right"
                android:hint="请选择车型"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="座位数"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/btn_site_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arr_big"
                android:gravity="center_vertical|right"
                android:hint="请选择座位数"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发动机号"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <com.paulz.carinsurance.view.UpperCaseEditText
                android:id="@+id/et_engine_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入发动机号"
                android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册日期"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/btn_regist_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arr_big"
                android:gravity="center_vertical|right"
                android:hint="请选择注册日期"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否为贷款车辆"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <CheckBox
                android:id="@+id/cb_credit"
                style="@style/CustomCheckboxTheme_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否一年内过户"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <CheckBox
                android:id="@+id/cb_new"
                style="@style/CustomCheckboxTheme_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_is_new"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过户日期"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <TextView
                android:id="@+id/btn_new_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arr_big"
                android:gravity="center_vertical|right"
                android:hint="请选择过户日期"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/btn_add_appoint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特别约定"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/arr_big"
                android:gravity="center_vertical|right"
                android:hint="选填（按揭车必填）"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey_french2"
                android:textSize="@dimen/text_size" />



        </LinearLayout>

        <com.paulz.carinsurance.view.ListViewInScrollView
            android:id="@+id/lv_appoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_divider1"
            />


        <TextView
            android:id="@+id/tv_daikuan_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="* 目前只有“人保”支持按揭车报价"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/main"
            android:textSize="@dimen/text_size_small" />



        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn_orange"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/btn_white_orange" />

        <TextView
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="5dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="不会填？看例图"
            android:textColor="@color/base_blue"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>
</ScrollView>

