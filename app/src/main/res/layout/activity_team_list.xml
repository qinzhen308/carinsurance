<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height='wrap_content'
            android:layout_margin="10dp"
            android:background="@drawable/bg_search"
            android:drawableRight="@drawable/search_icon_search"
            android:gravity="left|center_vertical"
            android:hint="请输入关键字"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_grey"
            android:textColorHint="@color/text_grey_french2"
            android:textSize="@dimen/text_size_small" />

        <View
            android:id="@+id/btn_search"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_bar"
            android:layout_alignRight="@+id/search_bar"
            android:layout_alignTop="@+id/search_bar" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_category_title_down_pressed"
                android:gravity="center"
                android:text="排序"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_category_title_down_pressed"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <com.paulz.carinsurance.view.pulltorefresh.PullListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <FrameLayout
            android:id="@+id/load_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>

    </RelativeLayout>


</LinearLayout>