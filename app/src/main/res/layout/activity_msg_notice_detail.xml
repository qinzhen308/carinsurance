<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">
    
    
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/img_default_banner"
        android:scaleType="fitXY"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_toLeftOf="@+id/tv_date"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:text="2013-12-31"
            android:textColor="@color/text_grey_french1"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_describ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="describ"
            android:layout_below="@+id/tv_title"
            android:textColor="@color/text_grey_french1"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/label_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size" />



        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="describ"
            android:layout_below="@+id/label_detail"
            android:textColor="@color/text_grey_french1"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size" />


    </RelativeLayout>



</LinearLayout>

