<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    >

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_marginTop="10dp"
        style="?android:attr/progressBarStyleSmall"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/load_refresh_progress"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >



        <EditText
            android:id="@+id/et_captcha1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:hint="验证码"
            android:singleLine="true"
            android:background="@drawable/bg_rectangle_strake_grey_no_coner"
            android:textColorHint="@color/text_grey_french1"
            android:textSize="@dimen/text_size_small" />



        <ImageView
            android:id="@+id/iv_captcha1"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:background="@color/gray2"
            android:layout_marginLeft="20dp"
            />



    </LinearLayout>


  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

      <EditText
          android:id="@+id/et_captcha2"
          android:layout_width="100dp"
          android:layout_height="30dp"
          android:inputType="text"
          android:drawablePadding="10dp"
          android:paddingLeft="10dp"
          android:hint="验证码"
          android:singleLine="true"
          android:background="@drawable/bg_rectangle_strake_grey_no_coner"
          android:textColorHint="@color/text_grey_french1"
          android:textSize="@dimen/text_size_small" />



      <ImageView
          android:id="@+id/iv_captcha2"
          android:layout_width="120dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:background="@color/gray2"
          android:layout_marginLeft="20dp"
          />



    </LinearLayout>


</LinearLayout>