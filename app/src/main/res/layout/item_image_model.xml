<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="horizontal">



        <RelativeLayout
            android:id="@+id/item_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_strake_dash_grey_no_coner"
            android:scaleType="fitCenter" >


            <ImageView
                android:id="@+id/iv_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/btn_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_add"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:text="添加"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/text_grey_french1"
                android:drawablePadding="10dp"
                />


            <ImageView
                android:id="@+id/btn_delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_board_layer_controll_delete"
                android:layout_alignParentRight="true"
                />


            <FrameLayout
                android:id="@+id/progress_bar1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/transparency_black"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/load_refresh_progress"
                    />

            </FrameLayout>



        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/item_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_strake_dash_grey_no_coner"
            android:scaleType="fitCenter" >


            <ImageView
                android:id="@+id/iv_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/btn_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_add"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:text="添加"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/text_grey_french1"
                android:drawablePadding="10dp"
                />


            <ImageView
                android:id="@+id/btn_delete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_board_layer_controll_delete"
                android:layout_alignParentRight="true"
                />


            <FrameLayout
                android:id="@+id/progress_bar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/transparency_black"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/load_refresh_progress"
                    />

            </FrameLayout>



        </RelativeLayout>

    </LinearLayout>










</RelativeLayout>