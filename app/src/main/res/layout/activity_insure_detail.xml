            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="被投保人同车主"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size" />


            <CheckBox
                android:id="@+id/cb_same_insured"
                style="@style/CustomCheckboxTheme_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_not_same_insured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被保人姓名"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


                <EditText
                    android:id="@+id/et_not_same_insured_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:hint="请输入被保人姓名"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey_french2"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


                <EditText
                    android:id="@+id/et_not_same_insured_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:hint="请输入身份证"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey_french2"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size" />


                <EditText
                    android:id="@+id/et_not_same_insured_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:hint="请输入手机号码"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey_french2"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn_orange"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/btn_white_orange" />


    </LinearLayout>
</ScrollView>







