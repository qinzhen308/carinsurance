<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_order"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F19B60"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:text="状态"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_order_status"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_height="36dp"
        android:textColor="@color/text_grey_french1"
        android:text="2015-19-29 32:22"
        android:textSize="@dimen/text_size"
        android:layout_alignParentRight="true"
        android:background="@color/grayf5"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="10dp"
        android:text="1321313"
        android:textSize="@dimen/text_size_big_big_big"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="25dp"
        />


    <TextView
        android:id="@+id/tv_bouns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="10dp"
        android:text="佣金：1321313"
        android:textSize="@dimen/text_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_price"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />


    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_french1"
        android:layout_marginLeft="10dp"
        android:text="客户：1321313"
        android:textSize="@dimen/text_size"
        android:layout_below="@id/tv_bouns"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_french1"
        android:layout_marginLeft="10dp"
        android:text="险企：阿大声道"
        android:textSize="@dimen/text_size"
        android:layout_below="@id/tv_customer"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/btn_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_french1"
        android:layout_marginRight="10dp"
        android:text="取消订单"
        android:textSize="@dimen/text_size"
        android:layout_alignBottom="@+id/tv_channel"
        android:background="@drawable/bg_rectangle_strake_grey_no_coner"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        />




</RelativeLayout>